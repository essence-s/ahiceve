---
// interface Props {
//     title: string;
//     picture: string;
//     description: string;
//     url: string;
//     background: string;
//     dataNumber: string;
// }
const { title, picture, description, url, background, dataNumber } =
    Astro.props;
---

<style>
    .card-option {
        /* background: #e2e5eb; */
        height: 315px;
        width: 235px;
        /* background: #ffffff27; */
        border-radius: 20px;
        /* padding: 15px; */
        display: flex;
        flex-direction: column;
        /* gap: 15px; */
        overflow: hidden;
        /* box-shadow: 0 0 0px 4px #00000029; */
        transition: 0.8s;
        filter: grayscale(1);
        border: solid #ffffff17 11px;
    }
    .card-option__top-bar {
        height: 0;
        /* background: #b90000; */
        position: relative;
        /* flex: 1; */
    }
    .card-option__number {
        position: absolute;
        top: 10px;
        left: 10px;
        width: 35px;
        height: 35px;
        background: #f58c3c00;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: solid 4px #ffffff3d;
        z-index: 1;
    }
    .card-option__number::before {
        content: attr(data-number);
        position: relative;
        background: #ffffff36;
        border: solid 1px white;
        border-radius: 50%;
        width: 19px;
        height: 19px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: var(--font-size-small);
        line-height: 0.9;
    }
    .card-option__medium-bar {
        position: relative;
        padding: 31px 41px;
        /* border-radius: 4px; */
    }
    .card-option__medium-bar svg {
        width: 100%;
        height: 100%;
    }
    .card-option__title {
        font-size: var(--font-size-large);
        text-align: center;
        padding: 5px 15px;
        text-transform: uppercase;
        font-weight: 600;
        text-shadow: 3px 2px #00000033;
    }
    .card-option__picture {
        width: 75px;
        margin: auto;
    }
    .card-option__description {
        padding: 15px 20px;
        line-height: 1.1;
        /* background: #13151ffa; */
        border-radius: 4px;
        /* height: 100%; */
        flex: 1;
        display: flex;
        align-items: center;
    }
    .card-option__bottom-bar {
        /* background: #b90000; */

        color: white;
        display: flex;
        flex-direction: column;
        flex: 1;
    }
    a {
        text-decoration: none;
        color: inherit;
        /* padding: 7px;
        background: #1212126b;
        display: inline-block;
        text-align: center;
        width: 100%; */
    }
</style>

<a href={url}>
    <section class="card-option">
        <div class="card-option__top-bar" style={`background:${background}`}>
            <div class="card-option__number" data-number={dataNumber}></div>
        </div>

        <div class="card-option__medium-bar" style={`background:${background}`}>
            <!-- <div class="card-option__picture">
                <img src={picture} alt="" />
            </div> -->
            <div class="card-option__picture" 
                set:html={picture}
            >
            </div>
        </div>

        <div class="card-option__bottom-bar" style={`background:${background}`}>
            <div class="card-option__title">{title}</div>
            <div class="card-option__description">
                {description}
            </div>
        </div>
    </section>
</a>
